<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_app</item>
    </style>

    <style name="details_text_style" parent="small_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="article_title_text_style" parent="large_text_style">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/space2</item>
        <item name="android:layout_margin">@dimen/space2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:layout_margin">@dimen/space4</item>
        <item name="android:padding">@dimen/space4</item>
    </style>

    <style name="icons_style">
        <item name="android:layout_width">@dimen/icons_size</item>
        <item name="android:layout_height">@dimen/icons_size</item>
    </style>

    <style name="medium_icons_style">
    <item name="android:layout_width">@dimen/medium_icons_size</item>
    <item name="android:layout_height">@dimen/medium_icons_size</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    </style>

    <style name="large_text_style" parent="text_style">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large</item>
    </style>

    <style name="medium_text_style" parent="text_style">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
    </style>

    <style name="section_item_style" parent="medium_text_style">
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">@dimen/space8</item>
        <item name="android:padding">@dimen/space8</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

    <style name="small_text_style" parent="text_style">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    </style>

    <!--an other style for TV as Spinner >> style="@android:style/Widget.Holo.Spinner" /> -->
    <style name="text_view_with_spinner_layout_style" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:paddingTop">@dimen/space8</item>
        <item name="android:paddingBottom">@dimen/space8</item>
    </style>

    <style name="spinner_style" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">true</item>
    </style>

    <style name="spinner_with_label_TV_style" parent="spinner_style">
        <item name="android:layout_width">wrap_content</item>
        <!--<item name="android:dropDownWidth">230dp</item>-->
        <!--dropDownWidth (if set to match parent will case errors) -->
        <item name="android:dropDownVerticalOffset">70dp</item>
        <!--dropDownVerticalOffset to be down the spinner with xdp space -->
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@color/white</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">@dimen/date_picker_text_size</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/dark_gray</item>
    </style>


</resources>
